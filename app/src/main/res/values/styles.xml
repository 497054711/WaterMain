<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 透明居中 -对话框样式 -->
    <style name="TransparentCenter" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 对话框样式 -->
    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <!-- 布局距离样式 -->
    <style name="layoutLeftAndRight">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <!-- 布局距离样式 -->
    <style name="layoutPadding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- 常用电话号码输入框样式 -->
    <style name="itemTextPhoneStyle">
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#C2CBDD</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">11</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 常用密码输入框样式 -->
    <style name="itemTextPwdStyle">
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#B8CDD6</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">12</item>
        <item name="android:padding">10dp</item>
        <item name="android:password">true</item>
    </style>

    <!-- 常用编辑框样式 -->
    <style name="itemEditTextStyle">
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#B8CDD6</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 常用按钮样式 -->
    <style name="itemButonStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_corner_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 常用按钮样式 -->
    <style name="buttonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/common_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>
